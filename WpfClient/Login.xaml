<Window x:Class="WpfClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="400">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Label Grid.Row="0" x:Name="label" Content="Server address:" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="222"/>
        <TextBox Grid.Row="1" x:Name="serverAddressBox"  HorizontalAlignment="Center" Margin="5" Height="20" Text="wss://localhost:5001/ws" Width="222" />
        <Button Grid.Row="2" x:Name="connectButton"  Content="Connect" HorizontalAlignment="Center" Margin="5" Height="20" Width="222" Click="connectButton_Click"/>

    </Grid>
</Window>
